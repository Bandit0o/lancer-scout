generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Input {
  id      Int           @id
  type    String
  title   String
  min     Int?
  max     Int?
  step    Int?
  options InputOption[]
}

model InputOption {
  id      Int    @id @default(autoincrement())
  content String
  Input   Input? @relation(fields: [inputId], references: [id])
  inputId Int?
}

model Form {
  id      Int     @id @default(autoincrement())
  isMatch Boolean
}
