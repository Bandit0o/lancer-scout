generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model Input {
  id           Int      @id
  type         String
  title        String
  booleanValue Boolean?
  numberValue  Float?
  stringValue  String?
  Form         Form?    @relation(fields: [formId], references: [id])
  formId       Int?
}

model Form {
  id     Int     @id @default(autoincrement())
  type   String
  inputs Input[]
}
